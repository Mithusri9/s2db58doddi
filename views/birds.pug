extends layout

block content
  h1= title
  div(class="container-fluid")
        div(class="row")
            -
                var results = [
                    {
                        "name":"GoldenEagle",
                        "type":"Wild",
                        "national_bird":"Albania"
                    },
                    {
                        "name":"Red-crested turaco",
                        "type":"Wild",
                        "national_bird":"angola"
                    },
                    {
                        "name":"Zenaida dove",
                        "type":"Domestic",
                        "national_bird":"Anguilla"
                    }
                ]
            each i,index in results 
                div(class="col-sm-2" onclick=`buy(${index})`)  #{i.name}  
                div(class="col-sm-2" onclick=`buy(${index})`)  #{i.type}
                div(class="col-sm-2" onclick=`buy(${index})`)  #{i.national_animal}
  script.
    function buy(p)
    {
        alert(`You have purchased an item ${p+1}`);
    }