extends layout

block content
    h1= title
    - let items = results;
    div(class="container-fluid") 
     div(class="row") 
      each item in items
       - let destination = `dispatch(\"/birds/update?id=${item._id}\")`
       div(class="row-sm-2", class="m-1") Birds #{item.bird_name}(#{item.type}) is #{item.national_bird}
        button.btn( class="btn-primary ml-1", onclick= destination) Update
    script. 
     function dispatch(path)
     { 
      window.location.href=path 
     } 